! Uncomment to disable perl-extension features to improve security and speed
URxvt.perl-ext:
URxvt.perl-ext-common:

! Disable the annoying keycap picture insert mode and ISO 14755 modes
URxvt.iso14755: false
URxvt.iso14755_52: false

! Remove scrollbar:
URxvt.scrollBar: false

! Trying *.thingChanged in place of Rxvt.thingChanged
! *. thing may effect vim somehow as it caused X errors to be raised.

! Set scroll back history size:
Rxvt.saveLines: 200000

!Geometry?
!URxvt.geometry: 84

!! Colors
Rxvt.foreground:   FOREGROUND
! Rxvt.background:   BACKGROUND
Rxvt.cursorColor:  CURSORCOLOR

! True background transparency
Rxvt.depth: 32
Rxvt.background: rgba:0000/0000/0000/cccc
!*.background: rgba:0000/0000/0000/cccc
! have to try with compton or picom
! urxvt*blurRadius: 5

