# pulseaudio equivallent.
# Up/Down 1%
bindsym $mod+period exec "pactl set-sink-volume 0 +1%"
bindsym $mod+comma exec "pactl set-sink-volume 0 -1%"

# Up/Down 5%
bindsym $mod+Shift+period exec "pactl set-sink-volume 0 +5%"
bindsym $mod+Shift+comma exec "pactl set-sink-volume 0 -5%"

# Up/Down 10%
bindsym $mod+Ctrl+period exec "pactl set-sink-volume 0 +10%"
bindsym $mod+Ctrl+comma exec "pactl set-sink-volume 0 -10%"

# Toggle Mute 10%
bindsym $mod+slash exec "pactl set-sink-mute 0 toggle"

# Mic: Toggle Mute
bindsym $mod+Shift+slash exec "pactl set-source-mute 0 toggle"
